@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-controller="Product" asp-action="Create">Yeni Məhsul Əlavə et</a>
        </div>
        <hr />

        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Adı</th>
                        <th scope="col">Miqdarı</th>
                        <th scope="col">Satış Qiyməti</th>
                        <th scope="col">Maya Dəyəri</th>
                        <th scope="col">Qazanc</th>
                        <th scope="col">Əlavə edilmə tarixi </th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.SalePrice</td>
                                <td>@item.BuyingPrice</td>
                                <td>@item.Profit</td>
                                <td>@item.AddingDate</td>
                                <td>
                                    <a class="btn btn-success" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Düzəliş</a>
                                    <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Sil</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
