@model Product
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-controller="Product" asp-action="Update" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Adı</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Quantity" class="form-label">Miqdarı</label>
                    <input class="form-control" asp-for="@Model.Quantity">
                    <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SalePrice" class="form-label">Satış Qiyməti</label>
                    <input class="form-control" asp-for="@Model.SalePrice">
                    <span asp-validation-for="@Model.SalePrice" class="text-danger"></span>
                </div>
                <div class="mb-3 col-3">
                    <label asp-for="@Model.BuyingPrice" class="form-label">Alış Qiyməti</label>
                    <input class="form-control" asp-for="@Model.BuyingPrice">
                    <span asp-validation-for="@Model.BuyingPrice" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="@Model.AddingDate" value="@Model.AddingDate">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Product" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

