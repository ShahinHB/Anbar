@model VmUser
@{
    ViewData["Title"] = "CreateUser";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-controller="User" asp-action="CreateUser" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.UserName" class="form-label">Adı</label>
                    <input class="form-control" asp-for="@Model.UserName">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label">Şifrəsi</label>
                    <input class="form-control" asp-for="@Model.Password">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="User" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

